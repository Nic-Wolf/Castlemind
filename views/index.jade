extends layout

block scripts
	script(src="/components/angular/angular.js")
	script(src="/components/angular/angular-cookies.js")
	script(src="/javascripts/bundle.js")

block content
	h1= title
	h3 {{gCtrl.message}}
	button(ng-click="gCtrl.newGame()") New Game
	#divGrid
		div(ng-repeat="square in gCtrl.squares",class="{{square.class}}",ng-click="square.click()") {{square.textContent}}
	#divHints
		div(ng-repeat="hint in gCtrl.hints",class="{{hint.class}}") {{hint.textContent}}
	#divUserMoves
		div(ng-repeat="move in gCtrl.moves",class="{{move.class}}")